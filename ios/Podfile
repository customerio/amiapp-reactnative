  pod 'boost', :podspec => '../node_modules/react-native/third-party-podspecs/boost.podspec'  
  pod 'CustomerIO/Tracking', :git => "https://github.com/customerio/customerio-ios.git", :branch => 'levi/compile-notification-service' # '~> 1.1'
  pod 'CustomerIO/MessagingPushAPN', :git => "https://github.com/customerio/customerio-ios.git", :branch => 'levi/compile-notification-service' # '~> 1.1'
  
  # Uncomment to opt-in to using Flipper
  #
  # if !ENV['CI']
  #   use_flipper!('Flipper' => '0.75.1', 'Flipper-Folly' => '2.5.3', 'Flipper-RSocket' => '1.3.1')
  #   post_install do |installer|
  #     flipper_post_install(installer)
  #   end
  # end
end

target 'Notification Service' do
  pod 'CustomerIO/Tracking', :git => "https://github.com/customerio/customerio-ios.git", :branch => 'levi/compile-notification-service' # '~> 1.1'
  pod 'CustomerIO/MessagingPushAPN', :git => "https://github.com/customerio/customerio-ios.git", :branch => 'levi/compile-notification-service' # '~> 1.1'
